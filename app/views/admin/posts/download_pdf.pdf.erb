<!DOCTYPE html>
<html>
<head>
  <title>Posts PDF</title>
  <%= wicked_pdf_stylesheet_link_tag 'application' %>
</head>
<body>
  <h1>Posts</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
</html>
